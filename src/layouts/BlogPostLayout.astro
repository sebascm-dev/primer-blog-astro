---
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;

const { title, description, pubDate, image, tags, tLectura } = frontmatter;
---

<Layout title=`${title} - ${description}`>
  <main class="max-w-[800px] w-[90%]">
    <header class="mt-10">
      <div>
        <img
          class="w-full rounded-sm shadow-md"
          src={image.url}
          alt={image.alt}
        />
        <div class="mt-5">
          <h1 class="text-3xl md:text-4xl font-extrabold dark:text-white">{title}</h1>
          <div class="mt-2 text-xs md:text-base text-gray-400">
            <span>{pubDate} Â· {tLectura}</span>
          </div>
          <span>
            {
              tags.map((tag: string) => (
                <span class="bg-gray-100 text-gray-800 text-xs font-medium me-1 px-2 py-0.5 my-0.5 rounded opacity-90 dark:bg-gray-700 dark:text-gray-300">
                  #{tag}
                </span>
              ))
            }
          </span>
        </div>
        <p class="mt-7 text-sm md:text-base text-gray-500 dark:text-gray-100">{description}</p>
      </div>
      <div class="inline-flex items-center justify-center w-full mt-10">
        <hr
          class="w-64 h-1 my-8 bg-gray-200 border-0 rounded dark:bg-white-700"
        />
        <div
          class="absolute px-4 -translate-x-1/2 bg-white left-1/2 dark:bg-[#333333]"
        >
          <svg
            class="w-4 h-4 text-gray-700 dark:text-gray-300"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="currentColor"
            viewBox="0 0 18 14"
          >
            <path
              d="M6 0H2a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3H2a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Zm10 0h-4a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3h-1a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Z"
            ></path>
          </svg>
        </div>
      </div>
    </header>
    <div class="mt-10">
      <div
        class="min-w-full
        mb-32
        prose
        prose-sm
        md:prose-base
        dark:prose-invert

        prose-h1:font-bold prose-h1:text-2xl md:prose-h1:text-4xl
        prose-h2:font-bold prose-h2:text-xl md:prose-h2:text-3xl
        prose-h3:font-bold prose-h3:text-lg md:prose-h3:text-2xl
        prose-h4:font-bold prose-h4:text-base md:prose-h4:text-2xl

        prose-p:text-pretty prose-p:text-sm md:prose-p:text-base
        prose-strong:text-sm md:prose-strong:text-base
        prose-em:text-sm md:prose-em:text-base

        prose-ul:text-sm md:prose-ul:text-base
        prose-ol:text-sm md:prose-ol:text-base
        prose-li:text-sm md:prose-li:text-base
        prose-code:text-sm md:prose-code:text-base

        md:prose-blockquote:text-base
        prose-blockquote:bg-[#898a7e50]
        prose-blockquote:border-amber-200
        prose-blockquote:border-l-1
        prose-blockquote:px-4
        prose-blockquote:py-[1px]
        prose-blockquote:rounded-md
        prose-blockquote:shadow-xl
        prose-blockquote:text-amber-200
        prose-blockquote:text-sm

        prose-a:bg-gray-100 prose-a:text-gray-800 prose-a:text-xs prose-a:font-medium prose-a:me-2 prose-a:px-2 prose-a:py-0.5 prose-a:rounded prose-a:opacity-90 prose-a:dark:bg-gray-900 prose-a:dark:text-gray-300"
      >
        <slot />
      </div>
      <div></div>
    </div>
  </main>
</Layout>
