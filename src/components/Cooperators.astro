<script>
    document.addEventListener("DOMContentLoaded", function(event) {
        // Obtener el contenedor de cooperadores y su primer ul
        const cooperatorsContainer: HTMLElement = document.getElementById('cooperatorsContainer') as HTMLElement;
        const firstCooperatorsList: HTMLUListElement = cooperatorsContainer.querySelector('ul') as HTMLUListElement;

        // Clonar el primer ul y agregarlo despu√©s del primer ul
        const secondCooperatorsList: HTMLUListElement = firstCooperatorsList.cloneNode(true) as HTMLUListElement;
        cooperatorsContainer.appendChild(secondCooperatorsList);
    });
</script>
